@{
  String action = Model["Action"];
  String buttonText = "Add";
  Comment comment = Model["Comment"];
  Recipe recipe = Model["Recipe"];
  ViewData["Title"] = $"{action} Comment";
  if (action == "Edit")
  {
    buttonText = "Save";
  }
}

<h3>@action Comment</h3>
<hr />
@using (Html.BeginForm(action, "Comments"))
{
  @if (action == "Edit")
  {
    <input asp-for="@comment.CommentId" type="hidden" />
  }
  <input asp-for="@comment.RecipeId" type="hidden" value="@recipe.RecipeId" />
  <div class="form-group">
  <label asp-for="@comment.Body"></label>
  <textarea asp-for="@comment.Body" class="form-control"></textarea>
  <br />
  <label asp-for="@comment.Rating">Rate</label>
  <select asp-for="@comment.Rating" class="form-select">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <br />
</div>
  <input type="submit" value=@buttonText />
}
