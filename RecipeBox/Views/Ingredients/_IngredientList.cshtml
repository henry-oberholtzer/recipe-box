@model List<Ingredient>

<ul class="list-group">
@if(Model.Count == 0)
{
  <li class="list-group-item d-flex justify-content-between align-items-center">No Ingredients Found</li>
}

@foreach (Ingredient i in Model)
{
  <li class="list-group-item d-flex justify-content-between align-items-center">@Html.ActionLink($"{i.Name} - Used in {i.IngredientRecipes.Count()} recipes", "Details", "Ingredients", new { id = i.IngredientId })</li>
}
</ul>
