@model List<IngredientRecipe>

<ul class="list-group">
@if(Model.Count == 0)
{
  <li class="list-group-item d-flex justify-content-between align-items-center">No Ingredients</li>
}
@foreach (IngredientRecipe i in Model)
{
  <li class="list-group-item d-flex justify-content-between align-items-center"><span>@i.Amount @Enum.GetName(typeof(Units), i.Unit) - @Html.ActionLink(i.Ingredient.Name, "Details", "Ingredients", new { id = i.IngredientId })</span>
  </li>
}
</ul>